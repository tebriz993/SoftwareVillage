@using SoftwareVillage.Models;
@model List<Muraciet>

@{
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Vizyonumuz</h4>

            <a asp-controller="Muraciet" asp-action="Create" type="button" class="btn btn-info">Yarat</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Sıra nömrəsi
                            </th>
                            @* <th title="Font Awesome saytına daxil olun.Icons bölməsini seçin, Iconun qısa kodunu kopyalayıb yapışdırın. ">
                            Ikon
                            </th> *@

                            <th>
                                Başlıq
                            </th>
                            <th>
                                Ikon1
                            </th>
                            <th>
                                Kiçikbaşlıq1
                            </th>
                            <th>
                                Ikon2
                            </th>
                            <th>
                                Kiçikbaşlıq2
                            </th>
                            <th>
                                Altbaşlıq
                            </th>
                            <th>
                                Ikon3
                            </th>
                            <th>
                                Kiçikbaşlıq3
                            </th>
                            <th>
                                Nömrə
                            </th>
                            <th>
                                Ayarlar
                            </th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (Muraciet item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                @*  <td title="Font Awesome saytına daxil olun.Icons bölməsini seçin, Iconun qısa kodunu kopyalayıb yapışdırın.">

                            <i class="@item.Icon"></i>

                            </td> *@

                                <td>
                                    @item.Bigtitle
                                </td>
                                <td>
                                    @item.Icon1
                                </td>
                                <td>
                                    @item.Smalltitle1
                                </td>
                                <td>
                                    @item.Icon2
                                </td>
                                <td>
                                    @item.Smalltitle2
                                </td>
                                <td>
                                    @item.Subtitle
                                </td>
                                <td>
                                    @item.Icon3
                                </td>
                                <td>
                                    @item.Smalltitle3
                                </td>
                                <td>
                                    @item.Number
                                </td>
                                <td>
                                    <a asp-controller="Muraciet" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-controller="Muraciet" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://kit.fontawesome.com/65d861d288.js" crossorigin="anonymous"></script>