@using SoftwareVillage.Models;
@model AkademiyaAboutUs

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Redaktə et</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div>
                                <img src="~/assets/img/@Model.MyImage" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" type="file" class="form-control" placeholder="Şəkil" />

                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="AboutUs">AboutUs</label>
                                <input asp-for="AboutUs" type="text" class="form-control" value="@Model.AboutUs" placeholder="Haqqımızda" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input asp-for="Title" type="text" class="form-control" value="@Model.Title" placeholder="Başlıq" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Subtitle">Subtitle</label>
                                <input asp-for="Subtitle" type="text" class="form-control" value="@Model.Subtitle" placeholder="Altbaşlıq" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Special1">Xüsusiyyət1</label>
                                <input asp-for="Special1" type="text" class="form-control" value="@Model.Special1" placeholder="Xüsusiyyət1" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Special2">Xüsusiyyət2</label>
                                <input asp-for="Special2" type="text" class="form-control" value="@Model.Special2" placeholder="Xüsusiyyət2" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Special3">Xüsusiyyət3</label>
                                <input asp-for="Special3" type="text" class="form-control" value="@Model.Special3" placeholder="Xüsusiyyət3" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Special4">Xüsusiyyət4</label>
                                <input asp-for="Special4" type="text" class="form-control" value="@Model.Special4" placeholder="Xüsusiyyət4" />
                            </div>

                            


                            <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                            <button class="btn btn-light">Ləğv et</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>