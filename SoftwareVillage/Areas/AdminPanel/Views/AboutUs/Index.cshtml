@using SoftwareVillage.Models;
@model List<AkademiyaAboutUs>

@{
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Haqqimizda</h4>

            <a asp-controller="AboutUs" asp-action="Create" type="button" class="btn btn-info">Əlavə edin</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Sıra nömrəsi
                            </th>
                            <th>
                                Haqqımızda
                            </th>
                            <th>
                                Başlıq
                            </th>
                            <th>
                                Altbaşlıq
                            </th>
                            <th>
                                Təsvir1
                            </th>
                            <th>
                                Təsvir2
                            </th>
                            <th>
                                Təsvir3
                            </th>
                            <th>
                                Təsvir4
                            </th>
                            <th>
                                Şəkil
                            </th>
                            <th>
                                Ayarlar
                            </th>
                        </tr>
                    </thead>

                    <tbody>

                        
                        @foreach (AkademiyaAboutUs item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td>
                                    @item.AboutUs
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Subtitle
                                </td>
                                <td>
                                    @item.Special1
                                </td>
                                <td>
                                    @item.Special2
                                </td>
                                <td>
                                    @item.Special3
                                </td>
                                <td>
                                    @item.Special4
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/img/@item.MyImage" alt="image" />
                                </td>
                                <td>
                                    <a asp-controller="AboutUs" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-controller="AboutUs" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }
                        

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>