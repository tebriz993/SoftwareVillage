@using SoftwareVillage.Models;
@model It_SoftwareVillage

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Redaktə et</h4>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div>
                                <img src="~/assets/img/@Model.Image" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" type="file" class="form-control" placeholder="photo" />

                                <span asp-validation-for="Photo"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BigTitle">Title</label>
                                <input asp-for="BigTitle" type="text" class="form-control" value="@Model.BigTitle" placeholder="Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="LittleTitle">Subtitle</label>
                                <input asp-for="LittleTitle" type="text" class="form-control" value="@Model.LittleTitle" placeholder="Name" />
                            </div>



                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>