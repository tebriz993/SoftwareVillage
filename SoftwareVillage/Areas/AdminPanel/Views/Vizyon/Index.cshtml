@using SoftwareVillage.Models;
@model List<Missiyamız>

@{
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Vizyonumuz</h4>

            <a asp-controller="Vizyon" asp-action="Create" type="button" class="btn btn-info">Yarat</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Sıra nömrəsi
                            </th>
                            @* <th title="Font Awesome saytına daxil olun.Icons bölməsini seçin, Iconun qısa kodunu kopyalayıb yapışdırın. ">
                                Ikon
                            </th> *@

                            <th>
                                Başlıq
                            </th>
                            <th>
                                Altbaşlıq
                            </th>
                            <th>
                                Kurs adı
                            </th>
                            <th>
                                Index
                            </th>
                            
                            <th>
                                Ayarlar
                            </th>
                        </tr>
                    </thead>

                    <tbody>


                       @foreach (Missiyamız item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                               @*  <td title="Font Awesome saytına daxil olun.Icons bölməsini seçin, Iconun qısa kodunu kopyalayıb yapışdırın.">
                                    
                                        <i class="@item.Icon"></i>
                                    
                                </td> *@

                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Subtitle
                                </td>
                                <td>
                                    @item.Controller_Name
                                </td>
                                <td>
                                    @item.View_Name
                                </td>
                                <td>
                                    <a asp-controller="Vizyon" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-controller="Vizyon" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="https://kit.fontawesome.com/65d861d288.js" crossorigin="anonymous"></script>