@using SoftwareVillage.Models;
@model List<Carousel_Design>

@{
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Haqqimizda</h4>

            <a asp-controller="Carousel_Design" asp-action="Create" type="button" class="btn btn-info">Yarat</a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Sıra Nömrəsi
                            </th>
                            <th>
                                Şəkil
                            </th>
                            <th>
                                Başlıq
                            </th>
                            <th>
                                Altbaşlıq
                            </th>
                            <th>
                                Ayarlar
                            </th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (Carousel_Design item in Model)
                        {
                            <tr>
                                <td>
                                    @(count++)
                                </td>
                                <td class="py-1">
                                    <img src="~/assets/img/@item.Image" alt="image" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.Subtitle
                                </td>
                                <td>
                                    <a asp-controller="Carousel_Design" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                    <a asp-controller="Carousel_Design" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>