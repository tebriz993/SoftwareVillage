@using SoftwareVillage.Models;
@model StudentFeedbacks

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Əlavə et</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Şəkil</label>
                    <input asp-for="Photo" type="file" class="form-control" placeholder="Şəkil" />

                    <span asp-validation-for="Photo"></span>
                </div>
                @* <div class="form-group">
                    <label asp-for="Image">
                        Şəkil
                    </label>
                    <input asp-for="Image" type="text" class="form-control" placeholder="Şəkil" />
                    <span asp-validation-for="Image"></span>
                </div> *@

                <div class="form-group">
                    <label asp-for="FullName">
                        Ad və Soyad
                    </label>
                    <input asp-for="FullName" type="text" class="form-control" placeholder="Ad və Soyad" />
                    <span asp-validation-for="FullName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BootcampId">
                        Bootkamp
                    </label>
                    <select asp-for="BootcampId">
                        <option selected disabled>Seçim</option>
                        @foreach (Bootcamps item in ViewBag.Bootcamps)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }

                        <span asp-validation-for="BootcampId"></span>
                    </select>

                </div>

                <div class="form-group">
                    <label asp-for="Feedbacks">
                        Rəy
                    </label>
                    <input asp-for="Feedbacks" type="text" class="form-control" placeholder="Rəy" />
                    <span asp-validation-for="Feedbacks"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                <button class="btn btn-light">Ləğv et</button>

            </form>

        </div>
    </div>
</div>
