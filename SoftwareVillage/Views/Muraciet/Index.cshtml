@model List<Muraciet>

<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            
            <h1 class="display-4 text-white animated zoomIn">Müraciət edin</h1>
        </div>
    </div>
</div>

<!-- Quote Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    @foreach (Muraciet item in Model)
    {
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-7">
                    <div class="section-title position-relative pb-3 mb-5">
                        <h5 class="fw-bold text-primary text-uppercase">Müraciət formu</h5>
                        <h1 class="mb-0">@item.Bigtitle</h1>

                    </div>
                    <div class="row gx-3">
                        <div class="col-sm-6 wow zoomIn" data-wow-delay="0.2s">
                            @* fa fa-reply text-primary me-3 *@ <h5 class="mb-4"><i class="@item.Icon1"></i>@item.Smalltitle1  @* 24 saat içərisində cavab *@</h5>
                        </div>
                        <div class="col-sm-6 wow zoomIn" data-wow-delay="0.4s">
                            @* fa fa-phone-alt text-primary me-3 *@  <h5 class="mb-4"><i class="@item.Icon2"></i>@item.Smalltitle2</h5> 
                        </div>
                    </div>
                    <p class="mb-4">@item.Subtitle</p>
                    <div class="d-flex align-items-center mt-2 wow zoomIn" data-wow-delay="0.6s">
                        <div class="bg-primary d-flex align-items-center justify-content-center rounded" style="width: 60px; height: 60px;">
                            @* fa fa-phone-alt text-white *@  <i class="@item.Icon3"></i>
                        </div>
                        <div class="ps-4">
                            <h5 class="mb-2">@item.Smalltitle3</h5>
                            <h4 class="text-primary mb-0">@item.Number</h4>
                        </div>
                    </div>
                </div>
               

<div class="col-lg-5">
    <div class="bg-primary rounded h-100 d-flex align-items-center p-5 wow zoomIn" data-wow-delay="0.9s">
        <form asp-action="Contact" method="post">
            <div class="row g-3">
                <div class="col-xl-12">
                    <input type="text" class="form-control bg-light border-0" placeholder="Adınız" name="FirstName" style="height: 40px;">
                </div>
                <div class="col-xl-12">
                    <input type="text" class="form-control bg-light border-0" placeholder="Soyadınız" name="LastName" style="height: 40px;">
                </div>
                <div class="col-12">
                    <input type="email" class="form-control bg-light border-0" placeholder="Email ünvanı" name="Email" style="height: 40px;">
                </div>
                <div class="col-12">
                    <select class="form-select bg-light border-0" name="Program" style="height: 40px;">
                        <option selected>Front-end Proqramlaşdırma</option>
                        <option value="Back-end Proqramlaşdırma">Back-end Proqramlaşdırma</option>
                        <option value="Full-Stack Proqramlaşdırma">Full-Stack Proqramlaşdırma</option>
                        <option value="Data Analitika">Data Analitika</option>
                        <option value="Kibertəhlükəsizlik">Kibertəhlükəsizlik</option>
                        <option value="İT Project Menecer">İT Project Menecer</option>
                    </select>
                </div>
                <div class="col-12">
                    <select class="form-select bg-light border-0" name="PhonePrefix" style="height: 40px;">
                        <option selected>050</option>
                        <option value="051">051</option>
                        <option value="055">055</option>
                        <option value="070">070</option>
                        <option value="099">099</option>
                    </select>
                    <div class="col-xl-12">
                        <input type="tel" class="form-control bg-light border-0" placeholder="XXX-XX-XX" name="PhoneNumber" style="height: 30px;">
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-dark w-100 py-3" type="submit">Müraciət edin</button>
                </div>
            </div>
        </form>
    </div>
</div>

            </div>
        </div>
    }
    
</div>
<!-- Quote End -->