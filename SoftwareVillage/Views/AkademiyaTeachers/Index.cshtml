@model List<SoftwareVillage.Models.AkademiyaTeachers>

<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <a href="" class="h5 text-white">Akademiya</a>
            <h1 class="display-4 text-white animated zoomIn">Təlimçilərimiz</h1>
        </div>
    </div>
</div>

<!-- Team Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-primary text-uppercase">Peşəkar komandamız</h5>
            <h1 class="mb-0">Professional heyətimiz sizi yetişdirməkdən həzz alır</h1>
        </div>
        <div class="row g-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 wow slideInUp" data-wow-delay="0.3s">
                    <div class="team-item bg-light rounded overflow-hidden">
                        <div class="team-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/assets/img/@item.Image" alt="">
                            <div class="team-social">
                                <a class="btn btn-lg btn-primary btn-lg-square rounded" href="@item.SocialMedia.TwitterLink"><i class="fab fa-twitter fw-normal"></i></a>
                                <a class="btn btn-lg btn-primary btn-lg-square rounded" href="@item.SocialMedia.FacebookLink"><i class="fab fa-facebook-f fw-normal"></i></a>
                                <a class="btn btn-lg btn-primary btn-lg-square rounded" href="@item.SocialMedia.InstagramLink"><i class="fab fa-instagram fw-normal"></i></a>
                                <a class="btn btn-lg btn-primary btn-lg-square rounded" href="@item.SocialMedia.LinkedlnLink"><i class="fab fa-linkedin-in fw-normal"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <h4 class="text-primary">@item.FullName</h4>
                            <p class="text-uppercase m-0">@item.Profession.Name</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Team End -->
