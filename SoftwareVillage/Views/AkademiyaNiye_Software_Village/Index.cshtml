@using SoftwareVillage.Models;
@model List<Niye_SoftwareVillage>
  
<div class="container-fluid bg-primary py-5 bg-header" style="margin-bottom: 90px;">
    <div class="row py-5">
        <div class="col-12 pt-lg-5 mt-lg-5 text-center">
            <a href="" class="h5 text-white">Akademiya</a>
            <h1 class="display-4 text-white animated zoomIn">Niyə Software Village?</h1>

        </div>
    </div>
</div>

<!-- Features Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-primary text-uppercase">Niyə Software Village?</h5>
            <h1 class="mb-0">Gənclərin inkişafı bir millətin inkişafıdır və biz bu yolda olduğumuz üçün fəxr edirik.</h1>
        </div>
        @foreach (var item in Model)
        {
            <div class="row g-5">
                <div class="col-lg-4">
                    <div class="row g-5">
                        <div class="col-12 wow zoomIn" data-wow-delay="0.2s">
                            <div class="bg-primary rounded d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fa fa-cubes text-white"></i>
                            </div>
                            <h4>@item.Title1</h4>
                            <p class="mb-0">@item.Subtitle1</p>
                        </div>
                        <div class="col-12 wow zoomIn" data-wow-delay="0.6s">
                            <div class="bg-primary rounded d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fa fa-award text-white"></i>
                            </div>
                            <h4>@item.Title2</h4>
                            <p class="mb-0">@item.Subtitle2</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4  wow zoomIn" data-wow-delay="0.9s" style="min-height: 350px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute w-100 h-100 rounded wow zoomIn" data-wow-delay="0.1s" src="~/assets/img/@item.Image" style="object-fit: cover;">
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="row g-5">
                        <div class="col-12 wow zoomIn" data-wow-delay="0.4s">
                            <div class="bg-primary rounded d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fa fa-users-cog text-white"></i>
                            </div>
                            <h4>@item.Title3</h4>
                            <p class="mb-0">@item.Subtitle3</p>
                        </div>
                        <div class="col-12 wow zoomIn" data-wow-delay="0.8s">
                            <div class="bg-primary rounded d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                <i class="fa fa-phone-alt text-white"></i>
                            </div>
                            <h4>@item.Title4</h4>
                            <p class="mb-0">@item.Subtitle4</p>
                        </div>
                    </div>
                </div>
            </div>
        }
      
    </div>
</div>
<!-- Features Start -->
